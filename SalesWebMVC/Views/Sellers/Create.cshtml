@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr /> <!--Pular linha-->
<div class="row">   <!--Class="row" garante que o div tenha a largura da tela-->
    <div class="col-md-4">  <!--class="col-md-4" Utilizando 1/3 da tela-->
        <form asp-action="Create">
            <!--Define que quando enviar o formulário, chame a ação Create-->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>    <!--asp-for define o label que aparecerá na box-->
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>    <!--asp-for define o label que aparecerá na box-->
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>    <!--asp-for define o label que aparecerá na box-->
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>    <!--asp-for define o label que aparecerá na box-->
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>