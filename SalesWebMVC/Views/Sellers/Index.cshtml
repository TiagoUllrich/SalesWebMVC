@model IEnumerable<SalesWebMVC.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead> <!-- Comando para on cabeçalho data tabela ng-->
        <tr> <!-- Comando para definir a linha do cabeçalho da tabela-->
            <th> 
                <font size="3">
                    @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <font size="3">
                    @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <font size="3">
                    @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                <font size="3">
                    @Html.DisplayNameFor(model => model.BaseSalary)

            </th> 
        <th>

        </th>

        </tr>
    </thead>
    <tbody> <!--Comando para o corpo da tabela-->
        @foreach (var item in Model)
        {
        <tr>
            <td> <!-- Comando para definir as colunas da tabela -->
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                R$ @Html.DisplayFor(modelItem => item.BaseSalary),00
            </td> 
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>

    </table>

<p>Sellers index page</p>